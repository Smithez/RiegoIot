<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppRiegoIoT.Mobile"
             xmlns:converters="clr-namespace:AppRiegoIoT.Mobile.Resources.Converters"
             x:Class="AppRiegoIoT.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:BoolToConnectionTextConverter x:Key="BoolToConnectionTextConverter" />
            <converters:EstadoToColorConverter x:Key="EstadoToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
